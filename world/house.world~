box( pose [ -33 0 4 0 ] name "f9" color "dark grey" size [4 15 7]) #tv
box( pose [ -33 0 0 0 ] name "f10" color "dark grey" size [2 2 4]) #tv stand

counter( pose [ 24 -27 0 0 ] name "f11" color "steel blue")		   #kitchen counter
box( pose [ 32 -27 0 0 ] name "f19" color "grey" size [5 7 6]) 	   #table stand
circle( pose [ 15 6.5 4 0 ] name "f12" color "tan" )		   #oval table top
box( pose [ 15 6.5 0 0 ] name "f13" color "tan" size [2 2 4]) 	   #table stand
circle( pose [ 16 -12 0 0 ] name "f16" color "thistle" size [4 4 4.2])		   #oval stool
circle( pose [ 24 -12 0 0 ] name "f17" color "thistle" size [4 4 4.2])		   #oval stool
circle( pose [ 32 -12 0 0 ] name "f18" color "thistle" size [4 4 4.2])		   #oval stool


box( pose [ -12.5 44 0 0 ] name "f14" color "snow" size [7 15 4]) 	   #bath tub
box( pose [ -12.5 44 0 0 ] name "f15" color "light blue" size [4 12 4.2])



