define mylaser ranger
(
  sensor(
  range [ 0.0 30.0 ] # range
  fov 180       # field of vision
  samples 180   # samples 
  )
  # generic model properties
  color "black"
  size [ 0.050 0.050 0.100 ]
  
)

define box model
(
	# top
	block
	(
		points 8
		point[0] [0 0]
		point[1] [0 4.8]  
		point[2] [-0.2 5.0]
		point[3] [-2.8 5.0]
		point[4] [-3.0 4.8]
		point[5] [-3.0 0]
		point[6] [-2.8 -0.2]
		point[7] [-0.2 -0.2]
		z [0 1]

	)

	size [5 12 10]
	
)
define circle model
(
	bitmap "circle.pgm"
	size [14 8 1]
)

define floorplan model
(
  color "gray30"

  # most maps will need a bounding box
  boundary 1
  
  ranger_return 1.000
)

define my_block model
(
  size [0.5 0.5 0.5]
  gui_nose 0
)

# set the resolution of the underlying raytrace model in meters

resolution 0.02 #resolution of the underline bitmap model in meters. 

interval_sim 50  # simulation timestep in milliseconds. length of each simulation update cycle. does nothing.


window
( 
  size [ 1615 1026 ] #size of the window in pixels
  scale 10
  
)

# load an environment bitmap
floorplan
( 
  name "swarm"
  bitmap "house.pgm"
  color "light steel blue"
  size [75.000 105.000 12.000]
  pose [ 0.000 0.000 0.000 0.000 ]
) 

